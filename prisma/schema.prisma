generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model skills{
  id    Int  @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String
  category String
  proficiency Int
}

model Project{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  title String
  description String? // เครื่องหมาย ? คืออนุญาตให้เป็น null ได้ 
  techStack String[] 
  liveUrl String?
  githubUrl String?
  imageUrl String?
}




